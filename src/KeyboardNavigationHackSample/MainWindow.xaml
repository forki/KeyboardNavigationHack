<Window x:Class="KeyboardNavigationHackSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:KeyboardNavigationHackSample"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Grid>

        <StackPanel Orientation="Vertical">

            <GroupBox Margin="10" Header="Focus Hack">
                <StackPanel Orientation="Vertical">
                    <Button Margin="10"
                            Click="ButtonBase_OnClick"
                            Content="Button 1" />
                    <Button Margin="10"
                            Click="ButtonBase_OnClick"
                            Content="Button 2" />

                </StackPanel>
            </GroupBox>

            <GroupBox Margin="10" Header="Normal Focus Behavior">
                <StackPanel Orientation="Vertical">

                    <Button Margin="10" Content="Button 3" />
                    <Button Margin="10" Content="Button 4" />

                </StackPanel>
            </GroupBox>

        </StackPanel>

    </Grid>
</Window>
